<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTT.Views.NoticiasPage"
             Title="Noticias"
             x:Name="NoticiasPageRef"
             BackgroundColor="{StaticResource FondoOscuro}">

    <ContentPage.Resources>
        <DataTemplate x:Key="NoticiaTemplate">
            <Frame CornerRadius="15"
           Padding="10"
           HasShadow="True"
           BackgroundColor="White">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding Titulo}"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="DarkSlateBlue"
                   LineBreakMode="WordWrap" />

                    <Label Text="{Binding Descripcion}"
                   FontSize="14"
                   TextColor="Gray"
                   LineBreakMode="WordWrap" />

                    <Label Text="Ver noticia completa"
                   TextColor="Blue"
                   FontAttributes="Italic">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer
                        Command="{Binding Source={x:Reference NoticiasPageRef}, Path=EnlaceCommand}"
                        CommandParameter="{Binding Enlace}" />
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </Frame>
        </DataTemplate>

    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="15" Spacing="0">
            <Label Text="Ãšltimas noticias"
                   FontSize="40"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,10" />
            <HorizontalStackLayout Spacing="10" Margin="0,0,0,10">
                <Entry x:Name="txtBusqueda"
           Placeholder="Buscar por palabra clave"
           BackgroundColor="White"
           WidthRequest="220"
           TextColor="Black" />
                <Button Text="Buscar"
            Clicked="Buscar_Clicked"
            BackgroundColor="#007bff"
            TextColor="White" />
            </HorizontalStackLayout>

            <CollectionView x:Name="NoticiasView"
                            ItemTemplate="{StaticResource NoticiaTemplate}"
                            Margin="0,10">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="20" />
                </CollectionView.ItemsLayout>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
