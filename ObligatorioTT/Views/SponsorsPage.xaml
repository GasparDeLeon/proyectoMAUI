<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTT.Views.SponsorsPage"
             Title="Patrocinadores">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nuevo" Clicked="OnNuevoClicked" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="16" Spacing="12">
        <SearchBar x:Name="search"
               Placeholder="Buscar por nombre"
               SearchButtonPressed="OnBuscar" />
        <CollectionView x:Name="cv" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="70,*,Auto" Padding="8" Margin="0,4">
                        <Image Grid.Column="0" HeightRequest="48" Aspect="AspectFit" Source="{Binding LogoPath}" />
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                            <Label Text="{Binding Direccion}" FontSize="12" />
                        </VerticalStackLayout>
                        <HorizontalStackLayout Grid.Column="2" Spacing="6">
                            <Button Text="Editar" Clicked="OnEditar" CommandParameter="{Binding .}" />
                            <Button Text="Eliminar" Clicked="OnEliminar" CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
