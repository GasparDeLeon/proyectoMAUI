<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTT.Views.PerfilPage"
             Title="Mi perfil"
             BackgroundColor="#1a2332">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <!-- Foto -->
            <Image x:Name="imgFoto" HeightRequest="140" Aspect="AspectFill" BackgroundColor="#0f1724"/>
            <Button Text="Cambiar foto" Clicked="BtnElegirFoto_Clicked"/>

            <!-- Campos editables -->
            <Entry x:Name="txtNombre" Placeholder="Nombre completo"/>
            <Entry x:Name="txtDir" Placeholder="Dirección"/>
            <Entry x:Name="txtTel" Placeholder="Teléfono" Keyboard="Telephone"/>
            <Entry x:Name="txtEmail" Placeholder="Email" Keyboard="Email"/>

            <Button Text="Guardar cambios" Clicked="BtnGuardar_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
