<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTT.Views.LoginPage"
             Title="Iniciar sesión"
             BackgroundColor="#1a2332">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Entry x:Name="txtUser" Placeholder="Usuario"/>
        <Entry x:Name="txtPass" Placeholder="Contraseña" IsPassword="True"/>
        <Button Text="Ingresar" Clicked="BtnIngresar_Clicked"/>
        <Button Text="Crear cuenta" Clicked="BtnIrRegistro_Clicked"/>
        <Button Text="Ingresar con huella" Clicked="BtnBio_Clicked" />

    </VerticalStackLayout>
</ContentPage>
