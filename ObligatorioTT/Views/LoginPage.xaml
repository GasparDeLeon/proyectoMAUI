<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTT.Views.LoginPage"
             Title="Iniciar sesión"
             BackgroundColor="#0b1220">

    <!-- ====== Recursos / Estilos para unificar botones ====== -->
    <ContentPage.Resources>
        <!-- Estilo base para todos los botones -->
        <Style x:Key="BaseBtn" TargetType="Button">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="HorizontalOptions" Value="Fill"/>
            <Setter Property="HeightRequest" Value="48"/>
        </Style>

        <!-- Botón primario (Ingresar) -->
        <Style x:Key="PrimaryBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
            <Setter Property="BackgroundColor" Value="#3B82F6"/>
        </Style>

        <!-- Botón secundario (Crear cuenta / Mostrar contraseña / Biometría) -->
        <Style x:Key="SecondaryBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
            <Setter Property="BackgroundColor" Value="#374151"/>
        </Style>

        <!-- Botón especial para biometría (mismo layout que los demás, color distinto) -->
        <Style x:Key="BiometricBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
            <Setter Property="BackgroundColor" Value="#243B53"/>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <!-- Fondo gradiente -->
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0b1220" Offset="0" />
                    <GradientStop Color="#121a2a" Offset="1" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="18" VerticalOptions="CenterAndExpand">

                <!-- Card -->
                <Frame Padding="20" CornerRadius="18" HasShadow="True" BackgroundColor="#111827" Margin="0,12">
                    <VerticalStackLayout Spacing="14">

                        <!-- Encabezado -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Bienvenido" TextColor="White" FontSize="24" FontAttributes="Bold"/>
                            <Label Text="Inicia sesión para continuar" TextColor="#9CA3AF" FontSize="13"/>
                        </VerticalStackLayout>

                        <!-- Usuario -->
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Usuario" TextColor="#E5E7EB" FontSize="12"/>
                            <Frame Padding="10" CornerRadius="12" HasShadow="False" BackgroundColor="#0b1220">
                                <Entry x:Name="txtUser"
                                       Placeholder="tu_usuario o email"
                                       TextColor="White"
                                       PlaceholderColor="#6B7280"
                                       Keyboard="Email"
                                       Completed="User_Completed"
                                       ReturnType="Next"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Contraseña -->
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Contraseña" TextColor="#E5E7EB" FontSize="12"/>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                <Frame Grid.Column="0" Padding="10" CornerRadius="12" HasShadow="False" BackgroundColor="#0b1220">
                                    <Entry x:Name="txtPass"
                                           Placeholder="********"
                                           TextColor="White"
                                           PlaceholderColor="#6B7280"
                                           IsPassword="True"
                                           Completed="Pass_Completed"
                                           ReturnType="Go"/>
                                </Frame>
                                <!-- Botón Mostrar/Ocultar con estilo secundario y tamaño consistente -->
                                <Button Grid.Column="1"
                                        x:Name="btnTogglePass"
                                        Text="Mostrar"
                                        Clicked="TogglePassword_Clicked"
                                        Style="{StaticResource SecondaryBtn}"
                                        Padding="12,8"
                                        Margin="8,0,0,0"
                                        WidthRequest="120"/>
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Botón biometría (ahora a ancho completo y con mismo alto) -->
                        <Button x:Name="btnBio"
                                Text="Ingresar con biometría"
                                Clicked="BtnBio_Clicked"
                                Style="{StaticResource BiometricBtn}"/>

                        <!-- Error inline -->
                        <Label x:Name="lblError"
                               Text=""
                               IsVisible="False"
                               TextColor="#FCA5A5"
                               FontSize="12"/>

                        <!-- Botones acción -->
                        <VerticalStackLayout Spacing="10">
                            <Button x:Name="btnIngresar"
                                    Text="Ingresar"
                                    Clicked="BtnIngresar_Clicked"
                                    Style="{StaticResource PrimaryBtn}"/>

                            <Button Text="Crear cuenta"
                                    Clicked="BtnIrRegistro_Clicked"
                                    Style="{StaticResource SecondaryBtn}"/>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Overlay de carga -->
        <Grid x:Name="busyOverlay"
              BackgroundColor="#80000000"
              IsVisible="False">
            <ActivityIndicator IsRunning="True" IsVisible="True" VerticalOptions="Center" HorizontalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>
