<?xml version="1.0" encoding="UTF-8" ?>
<Application 
    x:Class="ObligatorioTT.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Application.Resources>
      
        <Color x:Key="AzulPrincipal">#2C3E50</Color>
        <Color x:Key="AzulSecundario">#3498DB</Color> 
        <Color x:Key="FondoOscuro">#1A1A1A</Color>
        <Color x:Key="Blanco">#FFFFFF</Color>

       
        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{StaticResource FondoOscuro}" />
        </Style>

    
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource Blanco}" />
            <Setter Property="FontFamily" Value="Arial" />
        </Style>

      
        <Style x:Key="Headline" TargetType="Label">
            <Setter Property="FontSize" Value="32" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{StaticResource AzulSecundario}" />
        </Style>

        <Style x:Key="SubHeadline" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{StaticResource Blanco}" />
        </Style>

        <Style x:Key="DescriptionText" TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextColor" Value="{StaticResource Blanco}" />
        </Style>

       
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource AzulSecundario}" />
            <Setter Property="TextColor" Value="{StaticResource Blanco}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="HeightRequest" Value="50" />
        </Style>
        <!-- Colores base del Shell -->
        <Color x:Key="ShellBackgroundColor">#111111</Color>
        <!-- fondo flyout / navbar -->
        <Color x:Key="ShellForegroundColor">#FFFFFF</Color>
        <!-- texto ítems / iconos -->
        <Color x:Key="ShellTitleColor">#FFFFFF</Color>
        <!-- título en la barra -->

        <!-- (Opcional) matices para estados / separadores -->
        <Color x:Key="ShellSeparatorColor">#FFFFFFFF</Color>
        <!-- usalo con Opacity 0.08 -->
        <Color x:Key="ShellHoverColor">#222222</Color>

    </Application.Resources>
</Application>
